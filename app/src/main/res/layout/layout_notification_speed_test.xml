<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="horizontal">


    <ImageView
        android:id="@+id/imv_logo"
        android:layout_width="@dimen/_25sdp"
        android:layout_height="@dimen/_25sdp"
        android:src="@drawable/ic_logo_notification" />


    <LinearLayout
        android:id="@+id/container_info"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:weightSum="4"
        android:gravity="start"
        android:orientation="horizontal"
        android:paddingHorizontal="@dimen/_4sdp">


        <TextView
            android:id="@+id/tv_download_value_notification"
            style="@style/NotificationText"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_download_notification"
            android:drawablePadding="@dimen/_2sdp"
            android:gravity="center|start"
            android:maxLines="1"
            android:text="0 kB/s" />

        <TextView
            android:id="@+id/tv_upload_value_notification"
            style="@style/NotificationText"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_upload_notification"
            android:drawablePadding="@dimen/_2sdp"
            android:gravity="center|start"

            android:maxLines="1"
            android:text="0 kB/s"
            app:autoSizeStepGranularity="1dp" />


        <TextView
            android:id="@+id/mobile_usage_value"
            style="@style/NotificationText"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_mobile_usage"
            android:drawablePadding="@dimen/_2sdp"
            android:gravity="center|start"

            android:maxLines="1"
            android:text="0 MB" />

        <TextView
            android:id="@+id/wifi_usage_value"
            style="@style/NotificationText"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_wifi_usage_notification"
            android:drawablePadding="@dimen/_2sdp"
            android:gravity="center|start"

            android:maxLines="1"
            android:paddingStart="@dimen/_4sdp"
            android:text="0 MB" />


    </LinearLayout>


</LinearLayout>