<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingVertical="@dimen/_10sdp"
    android:weightSum="10">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:gravity="center">

        <ImageView
            android:id="@+id/imv_logo"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:src="@drawable/ic_logo_notification" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/container_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="6"
        android:weightSum="4"
        android:paddingHorizontal="@dimen/_8sdp"
        android:gravity="center|start"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/tv_download_value_notification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_download_notification"
            android:drawablePadding="@dimen/_2sdp"
            android:paddingStart="@dimen/_4sdp"
            android:text="@string/zero_value_dec"
            android:layout_weight="1"
            android:textColor="@color/gray_700"
            android:textSize="@dimen/_10sdp" />


        <TextView
            android:id="@+id/tv_upload_value_notification"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_upload_notification"
            android:drawablePadding="@dimen/_2sdp"
            android:paddingStart="@dimen/_4sdp"
            android:text="@string/zero_value_dec"
            android:textColor="@color/gray_700"

            android:textSize="@dimen/_10sdp" />


        <TextView
            android:id="@+id/mobile_usage_value"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_mobile_data_usage"
            android:drawablePadding="@dimen/_2sdp"
            android:paddingStart="@dimen/_4sdp"
            android:text="20"
            android:visibility="gone"
            android:textColor="@color/gray_700"
            android:textSize="@dimen/_10sdp" />


        <TextView
            android:visibility="gone"
            android:id="@+id/wifi_usage_value"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:drawablePadding="@dimen/_2sdp"
            android:drawableStart="@drawable/ic_wifi_usage_notification"
            android:paddingStart="@dimen/_4sdp"
            android:text="123"
            android:textColor="@color/gray_700"
            android:textSize="@dimen/_10sdp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:gravity="center"
        android:visibility="visible">

        <TextView
            android:id="@+id/btn_speed_test_notification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_background_start"
            android:fontFamily="@font/app_font_bold"
            android:paddingHorizontal="@dimen/_16sdp"
            android:paddingVertical="@dimen/_8sdp"
            android:text="@string/speed_test_title"
            android:textColor="@color/gray_800"
            android:textSize="@dimen/_5sdp"
            android:textStyle="bold" />
    </LinearLayout>


</LinearLayout>