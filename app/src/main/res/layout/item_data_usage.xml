<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:background="@drawable/background_item_result"
        android:foreground="@drawable/ripple_effect_fg"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingVertical="@dimen/_12sdp"
        android:weightSum="4"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tvDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="60 ms"
            android:textColor="@color/white"
            android:maxLines="1"
            app:autoSizeStepGranularity="1dp"
            app:autoSizeMaxTextSize="@dimen/_16sdp"
            app:autoSizeMinTextSize="@dimen/_6sdp" />

        <TextView
            android:id="@+id/tvMobileUsage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:maxLines="1"
            android:text="Aug 18"
            android:textColor="@color/white"
            app:autoSizeMaxTextSize="@dimen/_16sdp"
            app:autoSizeMinTextSize="@dimen/_6sdp"
            app:autoSizeStepGranularity="1dp"
            app:autoSizeTextType="uniform" />


        <TextView
            android:id="@+id/tvWifiUsage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/app_font_black"
            android:gravity="center"
            android:text="30.04"
            android:textColor="@color/white"
            android:maxLines="1"
            app:autoSizeStepGranularity="1dp"
            app:autoSizeMaxTextSize="@dimen/_16sdp"
            app:autoSizeMinTextSize="@dimen/_6sdp" />


        <TextView
            android:id="@+id/tvTotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/app_font_black"
            android:gravity="center"
            android:text="32.67"
            android:textColor="@color/white"
            android:maxLines="1"
            app:autoSizeStepGranularity="1dp"
            app:autoSizeMaxTextSize="@dimen/_16sdp"
            app:autoSizeMinTextSize="@dimen/_6sdp" />

    </androidx.appcompat.widget.LinearLayoutCompat>
</androidx.constraintlayout.widget.ConstraintLayout>
