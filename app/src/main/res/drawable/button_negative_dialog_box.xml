<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item>
        <shape android:shape="rectangle" >
            <gradient
                android:endColor="@color/gradient_green_end"
                android:startColor="@color/gradient_green_start"
              />

            <stroke
                android:width="2dp"
                android:color="@color/gradient_green_end" />
            <corners android:radius="20dp" />
        </shape>
    </item>
    <item
        android:bottom="2dp"
        android:left="2dp"
        android:right="2dp"
        android:top="2dp">
        <shape android:shape="rectangle" >
            <solid android:color="@color/gray_700" />
            <corners android:radius="20dp" />

        </shape>
    </item>

</layer-list>