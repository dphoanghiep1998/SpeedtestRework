<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="true">
        <shape>
            <corners android:radius="@dimen/_8sdp" />
            <gradient android:angle="90" android:endColor="@color/gradient_green_start" android:startColor="@color/gradient_green_end" android:type="linear" />
        </shape>
    </item>
    <item android:state_enabled="false">
        <shape>
            <corners android:radius="@dimen/_8sdp" />
            <solid android:color="@color/gray_600" />
        </shape>
    </item>

</selector>
