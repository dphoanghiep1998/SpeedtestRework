<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <rotate
            android:fromDegrees="270"
            android:pivotX="50%"
            android:pivotY="50%"
            android:toDegrees="270">
            <shape
                android:shape="ring"
                android:thicknessRatio="50"
                android:useLevel="false">
                <solid android:color="@color/gray_800" />
            </shape>
        </rotate>
    </item>
    <item>
        <rotate android:fromDegrees="270"
            android:pivotX="50%"
            android:pivotY="50%"
            android:toDegrees="270">

            <shape
                android:shape="ring"
                android:thicknessRatio="50"
                android:useLevel="true">
                <gradient
                    android:startColor="@color/gradient_green_end"
                    android:endColor="@color/gradient_green_start" />
            </shape>
        </rotate>
    </item>
</layer-list>