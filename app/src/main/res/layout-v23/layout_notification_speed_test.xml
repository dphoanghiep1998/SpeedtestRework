<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingHorizontal="@dimen/_8sdp"
    tools:ignore="RtlSymmetry">


    <ImageView
        android:id="@+id/imv_logo"
        android:layout_width="@dimen/_25sdp"
        android:layout_height="@dimen/_25sdp"
        android:src="@drawable/ic_logo_notification" />


    <LinearLayout
        android:id="@+id/container_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="start"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/container_speed_monitor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_download_value_notification"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableStart="@drawable/ic_download_notification"
                android:drawablePadding="@dimen/_2sdp"
                android:gravity="center"
                android:maxLines="1"
                android:paddingStart="@dimen/_4sdp"
                android:text="@string/zero_value_dec"
                android:textColor="@color/gray_700"
                android:textSize="@dimen/_10sdp" />

            <TextView
                android:id="@+id/tv_upload_value_notification"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableStart="@drawable/ic_upload_notification"
                android:drawablePadding="@dimen/_2sdp"
                android:gravity="center"
                android:maxLines="1"
                android:paddingStart="@dimen/_4sdp"
                android:text="@string/zero_value_dec"
                android:textColor="@color/gray_700"
                android:textSize="@dimen/_10sdp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/container_data_usage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/mobile_usage_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_mobile_usage"
                android:drawablePadding="@dimen/_2sdp"
                android:gravity="center"
                android:maxLines="1"
                android:paddingStart="@dimen/_4sdp"
                android:text="@string/zero_value_dec"
                android:textColor="@color/gray_700"
                android:textSize="@dimen/_10sdp" />

            <TextView
                android:id="@+id/wifi_usage_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_wifi_usage_notification"
                android:drawablePadding="@dimen/_2sdp"
                android:gravity="center"
                android:maxLines="1"
                android:paddingStart="@dimen/_4sdp"
                android:text="@string/zero_value_dec"
                android:textColor="@color/gray_700"
                android:textSize="@dimen/_10sdp" />
        </LinearLayout>


    </LinearLayout>

    <TextView
        android:id="@+id/btn_speed_test_notification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/button_background_start"
        android:fontFamily="@font/app_font_bold"
        android:paddingHorizontal="@dimen/_8sdp"
        android:paddingVertical="@dimen/_8sdp"
        android:text="@string/speed_test_title"
        android:textColor="@color/gray_800"
        android:textSize="@dimen/_8sdp"
        android:textStyle="bold" />


</LinearLayout>